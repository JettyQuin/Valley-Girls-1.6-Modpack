{
    "Format": "2.0.0",

    "ConfigSchema": {
      
        "EasyRecipes": {
          "Description": "If you want the machine recipes to be default/known immediately. Otherwise they will unlock when you reach certain heart levels with NPCS.",
          "AllowValues": "true, false",
          "Default": "false",
          "AllowBlank": false,
          "AllowMultiple": false
        },
        "ShippingCollection": {
            "Description": "If you want to include the objects in this mod from the shipping collection. Set to false if you do not want these items required for perfection or shipping achievement. Defaults to True.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
          }
},

"DynamicTokens": [
    {
        "Name": "ShippingConfig",
        "Value": "False",
        "When": {
            "ShippingCollection": "True"
        }
    },
    {
        "Name": "ShippingConfig",
        "Value": "True",
        "When": {
            "ShippingCollection": "False"
        }
    },
],

    "Changes": [
      
        //Include Objects

        {
            "LogName": "Botanicals Objects",
            "Action": "Include",
            "FromFile": "Data/objects.json",
        },

        //Include Crafting Recipes

        {
            "LogName": "Crafting Recipes",
            "Action": "Include",
            "FromFile": "Data/recipes.json",
            "When": {"EasyRecipes": false}
        },

        {
            "LogName": "Crafting Recipes Easy",
            "Action": "Include",
            "FromFile": "Data/recipes_easy.json",
            "When": {"EasyRecipes": true}
        },
       
        //Include Gift Tastes

        {
            "LogName": "Botanicals Gift Tastes",
            "Action": "Include",
            "FromFile": "Data/gifttastes.json",
        },

         //Include Mail

        {
            "LogName": "Botanicals Mail",
            "Action": "Include",
            "FromFile": "Data/mail.json",
        },

        //Include Machine Interactions

        {
            "LogName": "Botanicals Machine Rules",
            "Action": "Include",
            "FromFile": "Data/machines.json",
        },
        
        /*Include Shop Additions

        {
            "LogName": "Botanicals Added to Shop Inventory",
            "Action": "Include",
            "FromFile": "Data/shops.json",
        },*/
        
        //Include Textures

        {
            "LogName": "Botanicals Textures",
            "Action": "Include",
            "FromFile": "Data/textures.json",
        },
    ]
}