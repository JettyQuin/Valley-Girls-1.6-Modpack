{
    "Format": "2.0.0",

    "ConfigSchema": {
      
        "EasyRecipes": 
        {
          "Description": "If you want the machine recipes to be default/known immediately. Otherwise they will unlock when you reach certain heart levels with NPCS.",
          "AllowValues": "true, false",
          "Default": "false",
          "AllowBlank": false,
          "AllowMultiple": false
        },
        "ShippingCollection": {
            "Description": "If you want to include the objects in this mod from the shipping collection. Set to false if you do not want these items required for perfection or shipping achievement. Defaults to True.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
          },
        "KettleColor": 
        {
            "Description": "Option to Choose Recolor for Tea Kettle. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false,
            "AllowMultiple": false
        },

        "EnableSpecialOrders": 
		{
            "Description": "If you want to enable special orders that correspond to this mod's new items. True by default",
			"AllowValues": "true, false",
			"Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
		}
},

"DynamicTokens": [
    {
        "Name": "ShippingConfig",
        "Value": "False",
        "When": {
            "ShippingCollection": "True"
        }
    },
    {
        "Name": "ShippingConfig",
        "Value": "True",
        "When": {
            "ShippingCollection": "False"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Base",
        "When": {
            "KettleColor": "Base"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Black",
        "When": {
            "KettleColor": "Black"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Blue",
        "When": {
            "KettleColor": "Blue"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Cream",
        "When": {
            "KettleColor": "Cream"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Mocha",
        "When": {
            "KettleColor": "Mocha"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Pink",
        "When": {
            "KettleColor": "Pink"
        }
    },
    {
        "Name": "KettleRecolor",
        "Value": "Purple",
        "When": {
            "KettleColor": "Purple"
        }
    }

],

    "Changes": [
      
        //Include Objects

        {
            "LogName": "Tea Objects",
            "Action": "Include",
            "FromFile": "Data/objects.json",
        },

        //Include Crafting Recipes

        {
            "LogName": "Crafting Recipes",
            "Action": "Include",
            "FromFile": "Data/recipes.json",
            "When": {"EasyRecipes": false}
        },

        {
            "LogName": "Crafting Recipes Easy",
            "Action": "Include",
            "FromFile": "Data/recipes_easy.json",
            "When": {"EasyRecipes": true}
        },
       
        //Include Gift Tastes

        {
            "LogName": "Tea Gift Tastes",
            "Action": "Include",
            "FromFile": "Data/gifttastes.json",
        },

         //Include Mail

        {
            "LogName": "Tea Mail",
            "Action": "Include",
            "FromFile": "Data/mail.json",
        },

        //Include Machine Interactions

        {
            "LogName": "Tea Machine Rules",
            "Action": "Include",
            "FromFile": "Data/machines.json",
        },
        
        //Include Special Orders

        {
            "LogName": "Tea Special Orders",
            "Action": "Include",
            "FromFile": "Data/specialorders.json",
            "When": {"EnableSpecialOrders": true}
        },
        
        //Include Textures

        {
            "LogName": "Tea Textures",
            "Action": "Include",
            "FromFile": "Data/textures.json",
        },
    ]
}