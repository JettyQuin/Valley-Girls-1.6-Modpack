{
    "Format": "2.0.0",

    "ConfigSchema": {
      
        "EasyRecipes": {
          "Description": "If you want the machine recipes to be default/known immediately. Otherwise they will unlock when you reach certain heart levels with NPCS.",
          "AllowValues": "true, false",
          "Default": "false",
          "AllowBlank": false,
          "AllowMultiple": false
        },
        "ShippingCollection": {
            "Description": "If you want to include the objects in this mod from the shipping collection. Set to false if you do not want these items required for perfection or shipping achievement. Defaults to True.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
          },
        "FlowerStationColor": 
        {
            "Description": "Option to Choose Recolor for the Flower Station. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },

        "FragranceStationColor": 
        {
            "Description": "Option to Choose Recolor for the Fragrance Station. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },

        "WildflourTubColor": 
        {
            "Description": "Option to Choose Recolor for the Tub of Wildflours. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },

        "WaxCauldronColor": 
        {
            "Description": "Option to Choose Recolor for the Wax Cauldron. ONLY applied if Bees Knees Mod is also installed.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },

        "EnableSpecialOrders": 
		{
            "Description": "If you want to enable special orders that correspond to this mod's new items. True by default",
			"AllowValues": "true, false",
			"Default": "true",
            "AllowBlank": false
		}
},

