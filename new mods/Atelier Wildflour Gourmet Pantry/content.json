{
    "Format": "2.0.0",

    "ConfigSchema": {
      
        "EasyRecipes": {
          "Description": "If you want the machine recipes to be default/known immediately. Otherwise they will unlock when you reach certain heart levels with NPCS.",
          "AllowValues": "true, false",
          "Default": "false",
          "AllowBlank": false,
          "AllowMultiple": false
        },
        "ShippingCollection": {
            "Description": "If you want to include the objects in this mod from the shipping collection. Set to false if you do not want these items required for perfection or shipping achievement. Defaults to True.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
          },
        "BlenderColor": 
        {
            "Description": "Option to Choose Recolor for Kitchen Blender. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },
        "MortarColor": 
        {
            "Description": "Option to Choose Recolor for Kitchen Mortar. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },

        "YogurtBowlColor": 
        {
            "Description": "Option to Choose Recolor for Yogurt Bowl. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },
        "DistillerColor": 
        {
            "Description": "Option to Choose Recolor for the Distilling Counter. Defaults to base original color.",
            "AllowValues": "Base, Black, Blue, Cream, Mint, Mocha, Pink, Purple",
            "Default": "Base",
            "AllowBlank": false
        },
        "AddToShops": {
            "Description": "If you want the ingredients from Gourmet Pantry to be sold at Gus's Saloon. Defaults to true.",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false,
            "AllowMultiple": false
          },
          
        "EnableSpecialOrders": 
        {
            "Description": "If you want to enable special orders that correspond to this mod's new items. True by default",
            "AllowValues": "true, false",
            "Default": "true",
            "AllowBlank": false
        }

},

"DynamicTokens": [
    {
        "Name": "ShippingConfig",
        "Value": "False",
        "When": {
            "ShippingCollection": "True"
        }
    },
    {
        "Name": "ShippingConfig",
        "Value": "True",
        "When": {
            "ShippingCollection": "False"
        }
    },
   
   
],

    "Changes": [
      
        //Include Objects

        {
            "LogName": "Gourmet Pantry Objects",
            "Action": "Include",
            "FromFile": "Data/objects.json"
        },

        //Include Crafting Recipes

        {
            "LogName": "Gourmet Pantry Crafting Recipes",
            "Action": "Include",
            "FromFile": "Data/recipes.json",
            "When": {"EasyRecipes": false}
        },

        {
            "LogName": "Gourmet Pantry Crafting Recipes Easy",
            "Action": "Include",
            "FromFile": "Data/recipes_easy.json",
            "When": {"EasyRecipes": true}
        },
       
        //Include Gift Tastes

        {
            "LogName": "Gourmet Pantry Gift Tastes",
            "Action": "Include",
            "FromFile": "Data/gifttastes.json"
        },

         //Include Mail

        {
            "LogName": "Gourmet Pantry Mail",
            "Action": "Include",
            "FromFile": "Data/mail.json"
        },

        //Include Machine Interactions

        {
            "LogName": "Gourmet Pantry Machine Rules",
            "Action": "Include",
            "FromFile": "Data/machines.json"
        },
        
        //Include Shop Additions

        {
            "LogName": "Pantry Items Added to Shop Inventory",
            "Action": "Include",
            "FromFile": "Data/shops.json",
            "When":{"AddToShops": true}
        },
        

        //Include Special Orders

        {
            "LogName": "Pantry Special Orders",
            "Action": "Include",
            "FromFile": "Data/specialorders.json",
            "When": {"EnableSpecialOrders": true}
        },

        //Include Textures

        {
            "LogName": "Gourmet Pantry Textures",
            "Action": "Include",
            "FromFile": "Data/textures.json"
        }
    ]
}